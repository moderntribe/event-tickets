/**
 * Event Tickets - RSVP Structure
 *
 * @since TBD
 */

.event-tickets {

	.tribe-tickets__rsvp-actions-wrapper {
		flex: none;
		display: flex;
		justify-content: center;
		text-align: center;
		align-items: center;

		@media(--viewport-medium) {
			border-left: 1px dashed var(--color-border-secondary);
			width: calc(3 * var(--grid-width-1-of-8));
		}
	}

	.tribe-tickets__rsvp-actions {
		border-top: 1px dashed var(--color-border-secondary);
		margin-top: var(--spacer-6);
		padding: var(--spacer-6) 0;
		width: 100%;


		@media(--viewport-medium) {
			border-top: 0;
			margin-top: 0;
		}

		.tribe-common-c-btn {
			max-width: 125px;
		}
	}

	/* -------------------------------------------------------------------------
	 * RSVP Actions (Going / Can't go)
	 * ------------------------------------------------------------------------- */

	.tribe-tickets__rsvp-actions-rsvp-going,
	.tribe-tickets__rsvp-actions-rsvp-not-going {
		margin-top: var(--spacer-2);
	}

	/* -------------------------------------------------------------------------
	 * Full RSVP
	 * ------------------------------------------------------------------------- */
	.tribe-tickets__rsvp-actions-full {

		@media(--viewport-medium) {
			padding: 0 var(--spacer-7);
		}
	}

	.tribe-tickets__rsvp-actions-full-text {
		color: var(--color-text-secondary);
		text-transform: uppercase;
	}

	/* -------------------------------------------------------------------------
	 * RSVP Success
	 * ------------------------------------------------------------------------- */
	.tribe-tickets__rsvp-actions-success-going {
		display: flex;
		align-items: center;
		justify-content: center;

		@media(--viewport-medium) {
			justify-content: flex-start;
		}
	}

	.tribe-tickets__rsvp-actions-success-going-check-icon {
		background-color: var(--color-accent-primary);
		background-image: svg-inline(check-white);
		background-repeat: no-repeat;
		background-position: center;
		border-radius: 100%;
		display: inline-block;
		height: var(--spacer-7);
		width: var(--spacer-7);
		margin: 0 var(--spacer-0);
	}

	.tribe-tickets__rsvp-actions-success-going-text {
		margin-left: var(--spacer-1);
	}

	.tribe-tickets__rsvp-actions-success-going-toggle {
		margin-top: var(--spacer-2);
		display: flex;
		justify-content: center;

		@media(--viewport-medium) {
			justify-content: flex-start;
		}
	}

	.tribe-tickets__rsvp-actions-success-going-toggle-input {
		flex: none;
	}

	.tribe-tickets__rsvp-actions-success-going-toggle-label {
		text-align: left;
	}
}